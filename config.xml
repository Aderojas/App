<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.example"
    version   = "1.0.0">

<name>Grupo Shebel - Intranet</name>

<description>
Aplicación Móvil de la Intranet de Grupo Shebel.
</description>

<author href="http://www.prinex.es" email="contacto@shebel.com">
Shebel Consultoría y Servicios S.L.
</author>

<preference name="auto-hide-splash-screen" value="true" />
<preference name="fullscreen" value="true" />

<icon src="assets/icons/android/icon512.png"        width="512" height="512" /> 
<icon src="assets/icons/android/icon36.png"   gap:platform="android"    gap:density="ldpi" />    
<icon src="assets/icons/android/icon48.png"   gap:platform="android"    gap:density="mdpi" />    
<icon src="assets/icons/android/icon72.png"   gap:platform="android"    gap:density="hdpi" />    
<icon src="assets/icons/android/icon96.png"   gap:platform="android"    gap:density="xhdpi" />
<icon src="assets/icons/ios/icon-small-50.png"    gap:platform="ios"        width="50" height="50" />
<icon src="assets/icons/ios/icon-small-2x.png"    gap:platform="ios"        width="58" height="58" />
<icon src="assets/icons/ios/icon-72.png"          gap:platform="ios"        width="72" height="72" />
<icon src="assets/icons/ios/icon-small-50-2x.png" gap:platform="ios"        width="100" height="100" />
<icon src="assets/icons/ios/icon-2x.png"       	 gap:platform="ios"        width="114" height="114" />
<icon src="assets/icons/ios/icon-72-2x.png"       gap:platform="ios"        width="144" height="144" />

<gap:splash src="assets/icons/splash-screen/android/android_hdpi_landscape.png"      width="800"  height="480"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_hdpi_portrait.png"       width="480"  height="800"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_ldpi_landscape.png"      width="320"  height="200"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_ldpi_portrait.png"       width="200"  height="320"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_mdpi_landscape.png"      width="480"  height="320"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_mdpi_portrait.png"       width="320"  height="480"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_xhdpi_landscape.png"     width="1280" height="720"  gap:platform="android" />    
<gap:splash src="assets/icons/splash-screen/android/android_xhdpi_portrait.png"      width="720"  height="1280" gap:platform="android" />
<gap:splash src="assets/icons/splash-screen/android/android_mdpi_portrait.png"       width="320" height="480" gap:platform="ios" />
<gap:splash src="assets/icons/splash-screen/android/splashscreen-640x960.png" 		 width="640" height="960" gap:platform="ios" />
<gap:splash src="assets/icons/splash-screen/android/splashscreen-768x1024.png"       width="768" height="1024" gap:platform="ios" />
<gap:splash src="assets/icons/splash-screen/android/splashscreen-1024x768.png"       width="1024" height="768" gap:platform="ios" />


<gap:plugin name="ChildBrowser" version="~3" />
<feature name="http://plugins.phonegap.com/ChildBrowser/3.0.4" />
<access origin="*" />

</widget>
